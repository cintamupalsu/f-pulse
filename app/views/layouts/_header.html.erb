<header class="navbar navbar-default navbar-fixed-top shadow pt-1 rounded">
    
        <a class="navbar-brand" href="<%=root_path%>" id="application-title">
            <%= image_tag("logos/jisedailogo.png", alt: "kalpataru", size: "45x40", id:"kalpataru") %>Farm Pulse
        </a>
        <nav>
            <ul class="nav">
                <% if user_signed_in? %>
                   <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <%=@user.full_name%><b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "Setting", "#", class: "nav-link" %></li>
                            <li class="dropdown-divider"></li>

<% if flash.any? %>
    <% flash.each do |key, value| -%>
        <% if key == "alert"%>
            <% key = "warning" %>
        <% end %>
        <% if key == "notice" %>
            <% key = "info" %>
        <% end %>
        
        <section class="alert alert-<%= key %> pl-0 pr-0">
        <% if key == "warning" %>
        👮🏻
        <% else %>
        👩🏻‍💼
        <% end %>
        <%= value.html_safe %></section>
        
    <% end -%>
<% end %>
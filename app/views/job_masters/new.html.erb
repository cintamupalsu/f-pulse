<% provide(:title, '新規作業内容') %>
<div class="row">
    <%= render 'layouts/sidemenu' %>
    <div class="col-10">
        <h1>新規作業内容</h1>
        <div class="row">
            <div class="col-md-6">
                <%= form_with(model: @job_master, local: true) do |f|%>
                    <%= render 'shared/error_messages' %>
                    <%= f.label :content %>
                    <%= f.text_field :content, class: 'form-control' %>

                    <%= f.label :order %>
                    <%= f.text_field :order, class: 'form-control' %>

                    <%= f.submit "登録", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
